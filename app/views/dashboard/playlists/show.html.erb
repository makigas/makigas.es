<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :root %></li>
    <li><%= link_to t('.playlists'), :playlists %></li>
    <li class="current"><%= @playlist %></li>
  </ol>
  <h1><%= @playlist %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.videos'), [:videos, @playlist], class: 'btn btn-default' %>
  <%= link_to t('.edit'), [:edit, @playlist], class: 'btn btn-default' %>
  <%= button_to t('.destroy'), @playlist, method: :delete, class: 'btn btn-danger', data: { confirm: t('.really_destroy') } %>
<% end %>

<table class="table table-default">
  <tr>
    <td><%= t('.title') %></td>
    <td><%= @playlist.title %></td>
  </tr>
  <tr>
    <td><%= t('.description') %></td>
    <td><%= @playlist.description %></td>
  </tr>
  <tr>
    <td><%= t('.youtube_id') %></td>
    <td><%= link_to @playlist.youtube_id, "https://www.youtube.com/playlist?list=#{@playlist.youtube_id}" %></td>
  </tr>
  <tr>
    <td><%= t('.topic') %></td>
    <td><%= link_to @playlist.topic.title, @playlist.topic rescue t('.no_topic') %></td>
  </tr>
  <tr>
    <td><%= t('.card') %></td>
    <td><%= image_tag @playlist.card.url(:thumbnail) %></td>
  </tr>
  <tr>
    <td><%= t('.thumbnail') %></td>
    <td><%= image_tag @playlist.thumbnail %></td>
  </tr>
</table>