<% content_for :header do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('.dashboard'), :dashboard %></li>
    <li class="breadcrumb-item"><%= link_to t('.topics'), [:dashboard, :topics] %></li>
    <li class="breadcrumb-item"><%= link_to @topic, [:dashboard, @topic] %></li>
    <li class="breadcrumb-item current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @topic %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), [:dashboard, @topic], class: 'btn btn-outline-secondary' %>
<% end %>

<%= render 'form' %>