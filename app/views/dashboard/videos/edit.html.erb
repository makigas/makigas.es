<% content_for :header do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('.dashboard'), :dashboard %></li>
    <li class="breadcrumb-item"><%= link_to t('.videos'), [:dashboard, :videos] %></li>
    <li class="breadcrumb-item"><%= link_to @video, [:dashboard, @video] %></li>
    <li class="breadcrumb-item current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @video %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), [:dashboard, @video], class: 'btn btn-default' %>
<% end %>

<%= render 'form' %>