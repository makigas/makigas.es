<% content_for :header do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('.dashboard'), :dashboard %></li>
    <li class="breadcrumb-item"><%= link_to @playlist.title, [:dashboard, @playlist] %></li>
    <li class="breadcrumb-item"><%= link_to @video.title, [:dashboard, @playlist, @video] %></li>
    <li class="breadcrumb-item"><%= link_to t('.links'), [:dashboard, @playlist, @video, :links] %></li>
    <li class="breadcrumb-item current"><%= t('.new_link') %></li>
  </ol>
  <h1><%= t('.new_link') %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), [:dashboard, @playlist, @video, :links], class: 'btn btn-default' %>
<% end %>

<%= render 'form' %>
