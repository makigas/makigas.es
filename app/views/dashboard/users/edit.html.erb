<% content_for :header do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('.dashboard'), :dashboard %></li>
    <li class="breadcrumb-item"><%= link_to t('.users'), [:dashboard, :users] %></li>
    <li class="breadcrumb-item"><%= link_to @user, [:dashboard, @user] %></li>
    <li class="breadcrumb-item current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @user %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), [:dashboard, @user], class: 'btn btn-outline-secondary' %>
<% end %>

<%= render 'form' %>