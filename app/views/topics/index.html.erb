<% content_for :hero do %>
  <h1><%= t('.title') %></h1>
<% end %>

<div class="grid-table row">
<% @topics.each do |tp| %>
<div class="topic col-xs-6 col-sm-4 col-lg-3">
  <%= link_to tp do %>
  <div class="panel panel-default">
    <%= image_tag(tp.thumbnail.url(:default), srcset: "#{tp.thumbnail.url(:hidef)} 2x", class: 'img-responsive') %>
    <div class="panel-heading">
      <h3 class="panel-title"><%= tp.title %></h3>
    </div>
  </div>
  <% end %>
</div>
<% end %>
</div>
