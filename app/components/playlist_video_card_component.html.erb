    <h2 class="videocard__title">
      <span class="videocard__vnum"><%= @video.position %></span>
      <%= @video.title %>
    </h2>
    <p class="videocard__desc"><%= @video.description %></p>
    <p class="videocard__meta">
      <time datetime="<%= @video.published_at %>"><%= published_at %></time> - 
      Duraci√≥n: <%= duration %>
    </p>
  <% end %>
</article> 
