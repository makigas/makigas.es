<article class="plcard">
  <%= link_to playlist_path(@playlist), class: 'plcard__link' do %>
    <figure class="plcard__thumb" aria-hidden="true">
        <%= image_tag @playlist.thumbnail.url(:small), class: 'plcard__img', alt: '' %>
    </figure>
    <section class="plcard__body">
        <h2 class="plcard__title"><%= @playlist.title %></h2>
        <p><%= @playlist.description %></p>
        <%= render Six::Utils::MetaGroupComponent.new(classes: 'plcard__metas') do |g| %>
          <%= g.with_meta(icon: 'list') { "#{@playlist.videos.visible.count} episodios" } %>
          <%= g.with_meta(icon: 'clock') { duration } %>
        <% end %>
    </section>
    <% end %>
</article>
