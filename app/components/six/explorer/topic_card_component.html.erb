<article class="topcard">
  <%= link_to topic_path(@topic), class: 'topcard__link' do %>
    <figure class="topcard__thumb" aria-hidden="true">
      <%= image_tag @topic.thumbnail.url(:small), class: 'topcard__icon', alt: '' %>
    </figure>
    <div class="topcard__body">
      <h2 class="topcard__title"><%= @topic.title %></h2>
      <p><%= @topic.description %></p>
      <%= render Six::Utils::MetaGroupComponent.new(classes: 'topcard__metas') do |g| %>
        <%= g.with_meta(icon: 'list') { "Un total de #{@topic.playlists.count} listas" } %>
      <% end %>
    </div>
  <% end %>
</article>
