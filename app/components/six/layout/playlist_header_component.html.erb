<header class="plhead">
    <%= render Six::Base::WrapperComponent.new(classes: 'plhead__wrap') do %>
        <section class="plhead__data">
        <h1 class="plhead__title"><%= @playlist.title %></h1>
        <p class="plhead__lead"><%= @playlist.description %></p>
        <%= render Six::Utils::MetaGroupComponent.new(classes: 'plhead__metas') do |g| %>
            <%= g.with_meta(icon: 'list') { "#{@playlist.videos.count} episodios" } %>
            <%= g.with_meta(icon: 'clock') { duration } %>
            <%= g.with_meta(icon: 'dollar-sign') { 'Gratis' } %>
        <% end %>
        </section>
        <figure class="plhead__thumbnail" aria-hidden="true">
            <%= image_tag @playlist.thumbnail.url(:small), class: 'plhead__img', alt: '' %>
        </figure>
    <% end %>
</header>
