<%= content_tag(:div, class: class_list) do %>
  <%= render Six::Base::WrapperComponent.new(classes: 'navbar__grid') do %>
    <div class="navbar__mtoggle">
      <button class="navbar__button" type="button" id="sToggleMenu" aria-label="Desplegar menú">
        <%= feather_icon 'menu' %>
      </button>
    </div>
    <div class="navbar__logo">
      <%= link_to root_path, aria: { label: 'makigas' }, title: 'Página de inicio' do %>
        <%= render Six::Utils::MakigasComponent.new %>
      <% end %>
    </div>
    <div class="navbar__explore">
      <button class="navbar__explorecta" id="sExploreMenu">
        Explora contenido
        <%= feather_icon 'chevron-down', class: 'navbar__caret' %>
