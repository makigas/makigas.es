<%= content_tag(:div, class: class_list) do %>
  <%= render Six::Base::WrapperComponent.new(classes: 'navbar__grid') do %>
    <div class="navbar__mtoggle">
      <button class="navbar__button" type="button" id="sToggleMenu" aria-label="Desplegar menú">
        <%= feather_icon 'menu' %>
      </button>
    </div>
    <div class="navbar__logo">
      <%= link_to root_path, aria: { label: 'makigas' }, title: 'Página de inicio' do %>
        <%= render Six::Utils::MakigasComponent.new %>
      <% end %>
    </div>
    <div class="navbar__explore">
      <button class="navbar__explorecta" id="sExploreMenu">
        Explora contenido
        <%= feather_icon 'chevron-down', class: 'navbar__caret' %>
      </button>
      <div class="navbar__explorer">
        <%= render Six::Layout::NavbarExplorerComponent.new %>
      </div>
    </div>
    <% if show_search %>
    <div class="navbar__search">
      <button class="navbar__search__hide navbar__button" type="button" id="sHideSearch" aria-label="Ocultar búsqueda">
        <%= feather_icon 'chevron-left' %>
      </button>
      <div class="navbar__search__area">
        <%= render Six::Layout::SearchComponent.new(query: search_for) %>
      </div>
    </div>
    <div class="navbar__stoggle">
      <button class="navbar__button" type="button" id="sToggleSearch" aria-label="Buscar">
        <%= feather_icon 'search' %>
      </button>
    </div>
    <% end %>
  <% end %>
  <div id="sCurtain" class="navbar__curtain"></div>
<% end %>
